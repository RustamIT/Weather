<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/User_Field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginHorizontal="@dimen/fiftin"
        android:layout_marginTop="@dimen/sto"
        android:backgroundTint="@color/white"
        android:hint="@string/yuor_sity"
        android:minHeight="48dp"
        android:textColorHint="@color/svetlo_seryi" />

    <Button
        android:id="@+id/main_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/User_Field"
        android:layout_marginTop="@dimen/dvadcat"
        android:layout_marginHorizontal="@dimen/stotridcat"
        android:backgroundTint="@color/teal_700"
        android:text="@string/uznat_pogody" />

    <TextView
        android:id="@+id/result_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_btn"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat"
        android:textAlignment="center"
        android:textColor="@color/svetlo_seryi"
        android:textSize="@dimen/dvadcat_pyt"
        android:textStyle="bold" />


</RelativeLayout>